<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="uk.ac.tees.donut.squad.activities.MenuActivity"
    android:background="@color/cardview_dark_background"
    >
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/iv_logo"
        />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/mainLayout"
        android:background="@color/colorPrimary"
        android:padding="10dp"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textview"
            android:text="Squads!"
            style="@style/Base.TextAppearance.AppCompat.Widget.Button.Colored"
            />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/profileBtn"
            android:text="My Profile"
            android:onClick="openProfile"
            style="@style/Widget.AppCompat.Button.Colored" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/squadsBtn"
            android:text="Squads"
            android:onClick="openSquads"
            style="@style/Widget.AppCompat.Button.Colored" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/eventsBtn"
            android:text="Events"
            android:onClick="openEvents"
            style="@style/Widget.AppCompat.Button.Colored" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hostBtn"
            android:text="Host an Event"
            android:onClick="openHost"
            style="@style/Widget.AppCompat.Button.Colored" />

        <Button
            android:text="Places"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/placeList"
            android:onClick="openPlaces"
            style="@style/Widget.AppCompat.Button.Colored" />

        <Button
            android:text="New Place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/newPlace"
            android:onClick="openNewPlace"
            style="@style/Widget.AppCompat.Button.Colored" />

        <Button
            android:text="Location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/locationTest"
            android:onClick="openLocation"
            style="@style/Widget.AppCompat.Button.Colored" />

        <Button
            android:text="Map"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mapTest"
            android:onClick="openMap"
            style="@style/Widget.AppCompat.Button.Colored" />

    </LinearLayout>


    <include
        android:id="@+id/navigation"
        layout="@layout/element_bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        />

</RelativeLayout>
