<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="uk.ac.tees.donut.squad.activities.MenuActivity"
    android:background="@color/cardview_dark_background"
    style="@style/AppTheme"
    >

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardBackgroundColor="@color/colorPrimary"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        app:cardCornerRadius="2dp"
        android:layout_margin="16dp"
        >
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:id="@+id/mainLayout"
        style="@style/AppTheme"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:background="@color/colorPrimaryDark"
            android:padding="10dp"
            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textview"
            android:text="Squads!"
            android:layout_gravity="center"
            style="@style/Base.TextAppearance.AppCompat.Widget.Button.Colored"
            />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="10dp">
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/profileBtn"
            android:text="My Profile"
            android:onClick="openProfile"
            style="@style/Widget.AppCompat.Button.Colored" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/squadsBtn"
            android:text="Squads"
            android:onClick="openSquads"
            style="@style/Widget.AppCompat.Button.Colored" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/eventsBtn"
            android:text="Events"
            android:onClick="openEvents"
            style="@style/Widget.AppCompat.Button.Colored" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/hostBtn"
            android:text="Host an Event"
            android:onClick="openHost"
            style="@style/Widget.AppCompat.Button.Colored" />

        <Button
            android:text="Places"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/placeList"
            android:onClick="openPlaces"
            style="@style/Widget.AppCompat.Button.Colored" />

        <Button
            android:text="New Place"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/newPlace"
            android:onClick="openNewPlace"
            style="@style/Widget.AppCompat.Button.Colored" />

        <Button
            android:text="Location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/locationTest"
            android:onClick="openLocation"
            style="@style/Widget.AppCompat.Button.Colored" />

        <Button
            android:text="Map"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/mapTest"
            android:onClick="openMap"
            style="@style/Widget.AppCompat.Button.Colored" />
        </LinearLayout>

    </LinearLayout>
        <LinearLayout
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:background="@color/colorPrimaryDark"
            >
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/mysteryButton"
                android:text="Mystery Button"
                android:onClick="openMystery"
                android:layout_centerHorizontal="true"
                style="@style/Widget.AppCompat.Button.Colored" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>
