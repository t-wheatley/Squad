<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardBackgroundColor="@color/colorPrimary"
        app:cardCornerRadius="2dp"
        app:cardElevation="3dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="60dp"
                android:layout_height="89dp"
                android:id="@+id/listCard_imageLayout"
                android:visibility="gone">

                <ImageView
                    android:id="@+id/listCard_image"
                    android:layout_width="60dp"
                    android:layout_height="89dp"
                    android:layout_gravity="center"
                    android:adjustViewBounds="true"
                    android:background="@color/colorPrimaryDark"
                    android:scaleType="centerCrop"
                    android:visibility="gone" />

                <ProgressBar
                    android:id="@+id/listCard_imageProgress"
                    style="?android:attr/progressBarStyleLarge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="gone" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/listCard_imageLayout"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/colorPrimaryDark"
                    android:padding="5dp">

                    <TextView
                        android:id="@+id/listCard_text1"
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:layout_toLeftOf="@+id/listCard_text2"
                        android:text="Text 1"
                        android:textColor="@color/tw__composer_white"
                        android:textStyle="bold"
                        android:ellipsize="marquee" />

                    <TextView
                        android:id="@+id/listCard_text2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:layout_marginStart="3dp"
                        android:text="Text 2"
                        android:textColor="@color/tw__solid_white" />

                </RelativeLayout>

                <TextView
                    android:id="@+id/listCard_text3"
                    android:layout_width="match_parent"
                    android:layout_height="29dp"
                    android:ellipsize="end"
                    android:paddingBottom="4dp"
                    android:paddingEnd="5dp"
                    android:paddingStart="5dp"
                    android:paddingTop="5dp"
                    android:text="Text 3" />

                <!-- Line Break -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginBottom="4dp"
                    android:layout_marginEnd="5dp"
                    android:layout_marginStart="5dp"
                    android:background="@color/colorPrimaryDark">

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="4dp"
                    android:paddingEnd="5dp"
                    android:paddingStart="5dp">

                    <ImageView
                        android:id="@+id/icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_members" />

                    <TextView
                        android:id="@+id/listCard_text4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toEndOf="@+id/icon"
                        android:paddingStart="5dp"
                        android:text="Text 4" />

                    <TextView
                        android:id="@+id/listCard_text5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:text="Text 5" />
                </RelativeLayout>


            </LinearLayout>

        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>
